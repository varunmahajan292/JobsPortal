<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".EditEducation">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/mainAppçColor"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/mainAppçColor"
            android:text="X"/>

        <TextView
            android:id="@+id/Add_education"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:text="Edit Education"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:background="@color/mainSecondaryColor"
            android:text="Update"
            />

    </LinearLayout>

    <ScrollView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


            <LinearLayout
                android:layout_width="391dp"
                android:layout_height="97dp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="School"
                    android:textColor="#000000"
                    android:textSize="20sp" />


                <LinearLayout
                    android:layout_width="391dp"
                    android:layout_height="97dp"
                    android:orientation="horizontal"
                    android:weightSum="5"
                    >
                    <ImageView
                        android:backgroundTint="@color/black"
                        android:id="@+id/imageView"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/schoolicon" />

                    <EditText
                        android:id="@+id/school"
                        android:backgroundTint="@drawable/backgroundtintcolor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:ems="10"
                        android:textCursorDrawable="@drawable/customized_cursor"
                        android:inputType="textPersonName"
                        android:textColor="@color/grayFontsColor" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_margin="5dp"
                android:id="@+id/t2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Degree"
                android:textSize="20sp"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/Degree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textCursorDrawable="@drawable/customized_cursor"
                android:backgroundTint="@drawable/backgroundtintcolor"
                android:textColor="@color/grayFontsColor"
                android:inputType="textPersonName"
                android:text="" />
            <TextView
                android:layout_margin="5dp"
                android:id="@+id/t3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Field of study"
                android:textSize="20sp"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/studyField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textCursorDrawable="@drawable/customized_cursor"
                android:backgroundTint="@drawable/backgroundtintcolor"
                android:textColor="@color/grayFontsColor"
                android:inputType="textPersonName"
                android:text="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white">

                        <TextView
                            android:id="@+id/textstart"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:padding="5dp"
                            android:text="Start date"
                            android:textColor="#000000"
                            android:textSize="20sp" />
                    </androidx.cardview.widget.CardView>

                    <EditText
                        android:id="@+id/start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:textCursorDrawable="@drawable/customized_cursor"
                        android:backgroundTint="@drawable/backgroundtintcolor"
                        android:ems="10"
                        android:inputType="date"
                        android:textColor="@color/grayFontsColor" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white">

                            <TextView
                                android:id="@+id/textend"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#FFFFFF"
                                android:padding="5dp"
                                android:text="End date"
                                android:textColor="#000000"
                                android:textSize="20sp" />
                        </androidx.cardview.widget.CardView>

                        <EditText
                            android:id="@+id/end_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:textCursorDrawable="@drawable/customized_cursor"
                            android:backgroundTint="@drawable/backgroundtintcolor"
                            android:ems="10"
                            android:inputType="date"
                            android:textColor="@color/grayFontsColor" />


                        <TextView
                            android:layout_below="@+id/end_date"
                            android:id="@+id/expected"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Or expected graduation" />
                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>
            <TextView
                android:layout_margin="5dp"
                android:id="@+id/t6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grade"
                android:textSize="20sp"
                android:textColor="#000000"/>
            <EditText
                android:layout_margin="5dp"
                android:id="@+id/grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textCursorDrawable="@drawable/customized_cursor"
                android:backgroundTint="@drawable/backgroundtintcolor"
                android:textColor="@color/grayFontsColor"
                android:inputType="textPersonName"
                />
            <TextView
                android:id="@+id/t7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:text="Activities and societies"
                android:textColor="#000000"
                android:textSize="20sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <EditText
                    android:id="@+id/activities_societies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:ems="10"
                    android:textCursorDrawable="@drawable/customized_cursor"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:minLines="4"
                    android:padding="5dp"
                    android:textColor="@color/grayFontsColor"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Example: Alpha phi omega, NCC, Debate Team" />

            <TextView
                android:id="@+id/t8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Description"
                android:textColor="#000000"
                android:textSize="20sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <EditText
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:ems="10"
                    android:textCursorDrawable="@drawable/customized_cursor"
                    android:gravity="start|top"
                    android:inputType="textMultiLine"
                    android:minLines="5"
                    android:padding="5dp"
                    android:textColor="@color/grayFontsColor" />
            </androidx.cardview.widget.CardView>


            <Button

                android:id="@+id/delete"
                android:gravity="center"
                android:background="@drawable/subjectrect"
                android:layout_gravity="center_horizontal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Delete" />

        </LinearLayout>

    </ScrollView>



</LinearLayout>
