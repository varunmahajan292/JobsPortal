<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/active_jobs_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/edit_text_background">


    <TextView
        android:id="@+id/jobTitleDraftJobsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/robotoblack"
        android:text="Job Title"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/companyNameDraftJobsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/robotoregular"
        android:text="Company Name"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/jobTitleDraftJobsTextView"
        app:layout_constraintTop_toBottomOf="@+id/jobTitleDraftJobsTextView" />

    <TextView
        android:id="@+id/companyAddressDraftJobsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/robotoregular"
        android:text="Company Address"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/companyNameDraftJobsTextView"
        app:layout_constraintTop_toBottomOf="@+id/companyNameDraftJobsTextView" />

    <Button
        android:id="@+id/jobDetailsDraftJobsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_pressed"
        android:fontFamily="@font/robotoregular"
        android:padding="10dp"
        android:text="Job Details"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/companyAddressDraftJobsTextView"
        app:layout_constraintTop_toBottomOf="@+id/companyAddressDraftJobsTextView" />

    <Button
        android:id="@+id/viewApplicationsActiveJobButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/button_pressed"
        android:fontFamily="@font/robotoregular"
        android:padding="10dp"
        android:text="View Application"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/jobDetailsDraftJobsButton" />

</androidx.constraintlayout.widget.ConstraintLayout>